{
  "version": "0.2",
  "services": [
    {
      "name": "petclinic",
      "type": "java",
      "build": {
        "commands": [
          "./mvnw clean package"
        ]
      },
      "deploy": {
        "artifacts": [
          "target/*.jar"  // Path to your Spring Boot application JAR
        ],
        "main": "org.springframework.samples.petclinic.PetClinicApplication"
      }
    }
  ]
}
